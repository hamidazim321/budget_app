<section>
  <%= form_with(model: @group, local: true) do |f|%>
    <div>
      <%= f.text_field :name, autofocus: true, autocomplete: "category name", placeholder: "category name"%>
    </div>
    <div class="flex flex-col gap-3">
      <p>Choose an Icon:</p>
      <div class="flex items-center gap-3">
        <%= f.radio_button :icon, "https://img.icons8.com/doodle/48/stack-of-money.png", id: "bills" %>
        <%= label :icon, for: "bills" do %>
          <%= image_tag("https://img.icons8.com/doodle/48/stack-of-money.png") %>
        <% end %>
      </div>
      <div class="flex items-center gap-3">
        <%= f.radio_button :icon, "https://img.icons8.com/color/48/funimation.png", id: "entertainment" %>
        <%= label :icon, for: "entertainment" do %>
          <%= image_tag("https://img.icons8.com/color/48/funimation.png") %>
        <% end %>
      </div>
    </div>
    <div>
      <%= f.submit "Create", class:"text-white bg-second-color focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2"%>
    </div>
  <%end%>
</section>