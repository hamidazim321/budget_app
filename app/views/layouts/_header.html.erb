<header class="bg-main-color border-gray-200 py-2 md:py-0 md:px-4">
  <nav class="max-w-screen-xl flex flex-wrap items-center justify-between md:gap-5 md:justify-between mx-auto md:p-4">
    <button data-controller="menu" data-action="click->menu#historyBack" type="button">
      <%= image_tag("https://img.icons8.com/ios-filled/50/FFFFFF/back.png", size: "30x30")%>
    </button>
    <% if header_title%>
      <span class="text-white"><%= header_title%></span>
    <%end%>
    <div class="flex justify-between md:hidden">
      <button data-controller="menu"  data-menu-toggle="navbar-search" data-action="click->menu#toggleHidden" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm" aria-controls="navbar-search" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
              <path stroke="white" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
          </svg>
      </button>
    </div>
    <div class="items-center hidden w-full relative justify-between w-full md:flex md:w-auto md:order-1" id="navbar-search">
      <ul class="absolute md:static bg-main-color w-full flex flex-col md:items-center p-4 md:p-0 font-medium md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0">
        <% if user_signed_in?%>
          <li class="border-b md:border-b-0 px-0">
              <%= button_to "logout", destroy_user_session_path, method: :delete, class: "block py-2 px-0 text-slate-200  md:hover:text-white"%>
          </li>
        <%else%>
          <li class="border-b md:border-b-0 px-0">
              <%= link_to "login", new_user_session_path, class: "block py-2 px-0 text-slate-200 md:hover:text-white md:p-0"%>
          </li>
          <li class="border-b md:border-b-0 px-0">
              <%= link_to "Sign In", new_user_registration_path, class: "block py-2 px-0 text-slate-200 md:hover:text-white"%>
          </li>
        <%end%>
      </ul>
    </div>
  </nav>
</header>
