<section class="p-2">
  <%= form_with(model: @budget_transaction, local: true) do |f|%>
    <div class="flex flex-col gap-3" >
      <div>
        <%= f.text_field :name, autofocus: true, autocomplete: "category name", placeholder: "category name", class:"w-full border-b border-0 ring-0 border-slate-300 focus:border-gray-600 focus:border-b-2"%>
      </div>
      <div>
        <%= f.submit "Create", class:"w-full px-3 py-2.5 text-md font-medium text-white bg-second-color focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg text-center"%>
      </div>
    </div>
  <%end%>
</section>