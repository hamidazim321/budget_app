<section>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="flex flex-col gap-3 px-0 md:w-3/4 md:mx-auto">
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email address", class: "w-full border-b border-0 ring-0 border-slate-300 focus:border-gray-600 focus:border-b-2"  %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password",  placeholder: "password", class: "w-full border-b border-0 ring-0 border-slate-300 focus:border-gray-600 focus:border-b-2"  %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, class: "ring-0" %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Login", class:"w-full px-3 py-2.5 text-md font-medium text-white bg-second-color focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg text-center" %>
      </div>

    </div>
  <% end %>
  <div class="md:w-3/4 mx-auto">
    <%= render "devise/shared/links" %>
  <div>
</section>
